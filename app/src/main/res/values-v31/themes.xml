<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Theme for Android 12+ (API 31+) with Splash Screen API -->
    <style name="Theme.Bro" parent="android:Theme.Material.NoActionBar">
        <!-- Window background - dark to prevent red flash -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:colorBackground">@color/black</item>
        <item name="android:statusBarColor">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Splash Screen API (Android 12+) -->
        <item name="android:windowSplashScreenBackground">@color/splash_background</item>
        <item name="android:windowSplashScreenAnimatedIcon">@mipmap/ic_launcher</item>
        <item name="android:windowSplashScreenAnimationDuration">500</item>
        <item name="postSplashScreenTheme">@style/Theme.Bro.PostSplash</item>
    </style>
</resources>
