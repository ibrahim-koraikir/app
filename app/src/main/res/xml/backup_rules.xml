<?xml version="1.0" encoding="utf-8"?>
<!--
   Backup rules for Android 11 and below (API < 31).
   Excludes browsing data (cookies, history, cache) from cloud backup for privacy.
   See https://developer.android.com/guide/topics/data/autobackup
-->
<full-backup-content>
    <!-- Exclude WebView data (cookies, local storage, cache) -->
    <exclude domain="database" path="webview.db" />
    <exclude domain="database" path="webviewCache.db" />
    <exclude domain="file" path="app_webview" />
    
    <!-- Exclude all cache directories -->
    <exclude domain="cache" path="." />
    
    <!-- Exclude WebView cookies and local storage -->
    <exclude domain="file" path="app_webview/Cookies" />
    <exclude domain="file" path="app_webview/Local Storage" />
    <exclude domain="file" path="app_webview/IndexedDB" />
    <exclude domain="file" path="app_webview/Session Storage" />
    
    <!-- Exclude image cache -->
    <exclude domain="file" path="image_cache" />
    
    <!-- Exclude tab thumbnails (contain browsing history) -->
    <exclude domain="file" path="tab_thumbnails" />
    
    <!-- Exclude shared preferences that contain sensitive data -->
    <exclude domain="sharedpref" path="remote_ad_config.xml" />
    <exclude domain="sharedpref" path="WebViewChromiumPrefs.xml" />
    
    <!-- Exclude Room database (contains browsing history/tabs) -->
    <exclude domain="database" path="entertainment_browser_database" />
</full-backup-content>
